<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- Bottom 2dp Shadow -->
    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:startColor="#bdbdbd"
                android:endColor="#eaf2f5"
                android:type="linear"
                android:angle="45"> <!-- Change this value to have the correct shadow angle, must be multiple from 45 -->
            </gradient>
            <corners android:radius="4dp" />
        </shape>
    </item>

    <!-- White Top color -->
    <item android:bottom="2px" android:left="2px" android:right="2px" android:top="1px">
        <shape android:shape="rectangle" >
            <solid android:color="#eaf2f5" />

            <corners android:radius="4dp" />
        </shape>
    </item>

</layer-list>