<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_activity_DrawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:id="@+id/main_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/btn_light"
        android:orientation="vertical">

        <include layout="@layout/toolbar"/>

        <FrameLayout
            android:id="@+id/main_activity_content_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </FrameLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="@color/primary">

            <cn.laojing.smarthome.SutActionButton
                android:id="@+id/btnLogout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fab_icon="@drawable/login_dark"
                app:fab_colorNormal="@color/white_500"
                app:fab_colorPressed="@color/white_700"
                android:layout_marginTop="10dip"
                android:layout_marginLeft="38dip"
                android:layout_centerHorizontal="true"/>

            <cn.laojing.smarthome.SutActionButton
                android:id="@+id/btnLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fab_icon="@drawable/logout_light"
                app:fab_colorNormal="@color/white_500"
                app:fab_colorPressed="@color/white_700"
                android:layout_marginTop="10dip"
                android:layout_marginLeft="38dip"
                android:layout_centerHorizontal="true"/>

            <cn.laojing.smarthome.SutActionButton
                android:id="@+id/btnOpen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fab_icon="@drawable/lightopen_dark"
                app:fab_colorNormal="@color/white_500"
                app:fab_colorPressed="@color/white_700"
                android:layout_marginTop="10dip"
                android:layout_marginLeft="38dip"
                android:layout_centerHorizontal="true"/>

            <cn.laojing.smarthome.SutActionButton
                android:id="@+id/btnClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fab_icon="@drawable/lightclose_dark"
                app:fab_colorNormal="@color/white_500"
                app:fab_colorPressed="@color/white_700"
                android:layout_marginTop="10dip"
                android:layout_marginLeft="38dip"
                android:layout_centerHorizontal="true"/>

        </LinearLayout>

    </LinearLayout>


    <!-- The navigation drawer -->
    <include layout="@layout/navigation_drawer"/>

</android.support.v4.widget.DrawerLayout>